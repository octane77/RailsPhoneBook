<style>
  div.field{
      width: 485px;
  }
  div.card{
      width: 520px;
  }
</style>

<div class="card">
  <div class="card-header">
    <h4>Edit Profile</h4>
  </div>

  <div class="card-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%#= f.label :email %>
    <%= f.email_field :email, class: "form-control form-control-sm", placeholder: "Email Address", autofocus: true, autocomplete: "email" %>
    <br/>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.password_field :password, class: "form-control form-control-sm", placeholder: "Enter a new password (6 characters minimum)", autocomplete: "new-password" %>
<!--    <h6>Leave blank if you don't want it changed</h6>-->
    <%# if @minimum_password_length %>
<!--      <em><%#= @minimum_password_length %> characters minimum</em>-->
    <%# end %>
  </div>

  <div class="field form-group">
    <%#= f.label :password_confirmation %>
    <br />
    <%= f.password_field :password_confirmation, class: "form-control form-control-sm", placeholder: "Confirm Password", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
<!--    <%#= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>-->
    <br />
    <%= f.password_field :current_password, class: "form-control form-control-sm", placeholder: "Current Password: we need your current password to confirm your changes ", autocomplete: "current-password" %>
    <br/>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-outline-success btn-sm"%>
  </div>
<% end %>
  </div>
</div>

<br/>
<div class="card">
  <div class="card-header">
  <h4>Delete profile</h4>
  </div>
  <div class="card-body">
    <p> Clicking this button will permanently delete your account and data associated with it. <strong>There is no way to reverse this operation.</strong></p>
  <%= button_to "Delete profile", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-outline-danger btn-sm' %>
    <br/>
    <p>Click here to go back to your contact list</p>
    <%= link_to "Back to contact list", :back, class:'btn btn-outline-primary' %>
</div>
</div>